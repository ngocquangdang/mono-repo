{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "READ_CAPTCHA_WITH_AI",
    "DISPLAY_COPY_CURL_BUTTON", 
    "DISPLAY_AUTO_REGISTER_BUTTON",
    "GOOGLE_GENAI_API_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
